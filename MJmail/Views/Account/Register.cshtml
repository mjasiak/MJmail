@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Style/Scripts/accountScripts.js"></script>
</head>
<body style="background-color:black;">
    <div class="pageContainer">
        <div class="registerForm">
            <div class="registerInner">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="email">Email address:</label>
                        <input type="email" class="form-control" id="Email" name="Email">
                    </div>                   
                    <div class="form-group regUsername">
                        <label for="username">Username:</label>
                        <input type="text" class="form-control" id="UserName" name="UserName" />
                        <p id="usernameCancel">Cancel</p>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="Password" name="Password">
                    </div>
                    <p id="chgRegUsername">Username different than email</p>
                    <button type="submit" class="btn btn-default">Register</button>
                }
            </div>
        </div>
        <div class="cancelLink">
            @Html.ActionLink("Cancel", "Login", "Account")
        </div>
    </div>
</body>
</html>
